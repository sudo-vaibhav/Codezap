{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "./dist",
        "declaration": true,
        "typeRoots": ["@types", "./node_modules/@types"]
    },
    "include": ["./src/**/*"],
    "exclude": ["./node_modules", "./**/__tests__/*"]
}
